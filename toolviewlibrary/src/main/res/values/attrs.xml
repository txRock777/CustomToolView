<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomEditText">
        <!-- 删除图标 -->
        <attr name="edit_ic_delete" format="reference" />
        <attr name="edit_delete_x" format="integer"  />
        <attr name="edit_delete_y" format="integer"  />
        <attr name="edit_delete_width" format="integer"  />
        <attr name="edit_delete_height" format="integer"  />

        <!-- 左边图标 -->
        <attr name="edit_ic_left_click" format="reference" />
        <attr name="edit_ic_left_unclick" format="reference" />
        <attr name="edit_left_x" format="integer"  />
        <attr name="edit_left_y" format="integer"  />
        <attr name="edit_left_width" format="integer"  />
        <attr name="edit_left_height" format="integer"  />

        <!-- 光标 -->
        <attr name="edit_cursor" format="reference" />

        <!-- 是否显示左边/右边/ -->
        <attr name="edit_is_left" format="boolean"/>
        <attr name="edit_is_right" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomFrameLayout">

        <!-- 底部线的颜色 -->
        <attr name="frame_lineColor_click" format="color"  />
        <attr name="frame_lineColor_unclick" format="color"  />
        <attr name="frame_linePosition" format="integer"  />
        <attr name="frame_errorLineColor" format="integer"  />

        <!--<attr name="frame_code_"/>-->

        <!-- 是否显示验证码框/是否显示提示字 -->
        <attr name="frame_is_code" format="boolean"/>
        <attr name="frame_is_hint" format="boolean"/>

        <!-- 输入框 -->
        <attr name="frame_et_hint" format="string"/>
        <attr name="frame_et_size" format="integer" />
        <attr name="frame_et_hint_color" format="integer" />
        <attr name="frame_et_background" format="reference"/>
        <attr name="frame_et_textColor" format="integer"/>
        <attr name="frame_et_maxLines" format="integer" min="0" />


        <!-- 提示文本 -->
        <attr name="frame_tx_hint_textColor" format="integer"/>
        <attr name="frame_tx_hint_size" format="integer" />
        <attr name="frame_tx_hint_text" format="string"/>

        <!-- 验证码 -->
        <attr name="frame_tx_code_background" format="reference"/>
        <attr name="frame_tx_code_size" format="integer" />
        <attr name="frame_tx_code_textColor" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SuperEditText">
        <attr name="ic_delete" format="reference" />
        <attr name="delete_x" format="integer"  />
        <attr name="delete_y" format="integer"  />
        <attr name="delete_width" format="integer"  />
        <attr name="delete_height" format="integer"  />

        <attr name="ic_left_click" format="reference" />
        <attr name="ic_left_unclick" format="reference" />
        <attr name="left_x" format="integer"  />
        <attr name="left_y" format="integer"  />
        <attr name="left_width" format="integer"  />
        <attr name="left_height" format="integer"  />

        <attr name="lineColor_click" format="color"  />
        <attr name="lineColor_unclick" format="color"  />
        <attr name="linePosition" format="integer"  />

        <attr name="cursor" format="reference" />
        <attr name="is_code" format="boolean"/>
        <attr name="is_left" format="boolean"/>
        <attr name="is_right" format="boolean"/>

    </declare-styleable>


    <declare-styleable name="MenuItemLayout">
        <attr name="title_text" format="string" />
        <attr name="hint_text" format="string" />
        <attr name="icon_reference" format="reference" />
        <attr name="icon_uri" format="string" />
        <attr name="jump_url" format="string" />
        <attr name="divide_line_style" format="integer" />
    </declare-styleable>
</resources>